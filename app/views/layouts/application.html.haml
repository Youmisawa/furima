!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Furima
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
  %header.Header
    .Contents
      .Main
        .Title
          = link_to image_tag("material/logo/logo.png",class: 'Title__logo')
        %input{type: "text", class: "SearchBox__text", placeholder: "キーワードから探す"}
        %button{type: "submit", class: "SearchBox__btn"}
          = image_tag("material/icon/icon-search1.png", class: "SearchBox__btn__icon")
    
      .Nav
        .Product
          = link_to "カテゴリー","#", class: "Product__category"
          = link_to "ブランド","#", class: "Product__brand"
        .User
          = link_to "ログイン", "#", class: "User__login"
          = link_to "新規会員登録", "#", class: "User__new"
  %footer.Footer
    = yield